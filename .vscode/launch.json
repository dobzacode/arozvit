{
  "version": "0.2.0",

  "configurations": [
    {
      "type": "expo",
      "request": "attach",
      "name": "Debug Expo app",
      "projectRoot": "${workspaceFolder}/apps/expo",
      "bundlerPort": "8081",
      "bundlerHost": "127.0.0.1"
    },
    {
      "name": "Next.js",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm dev",
      "cwd": "${workspaceFolder}/apps/nextjs/",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
