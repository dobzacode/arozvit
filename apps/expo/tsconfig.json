{
  "extends": ["@arozvit/tsconfig/base.json"],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "types": ["nativewind/types", "jest"],
    "checkJs": false
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx",
    "index.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "jest-setup.ts"
  ],
  "exclude": ["node_modules"]
}
